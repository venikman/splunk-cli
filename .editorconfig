dotnet_diagnostic.IDE0020.severity = warning  # Use pattern matching to avoid 'is' with cast check
dotnet_diagnostic.IDE0028.severity = warning  # Use collection initializers
dotnet_diagnostic.IDE0029.severity = warning  # Use coalesce expression (nullable)
dotnet_diagnostic.IDE0030.severity = warning  # Use coalesce expression (non-nullable)
dotnet_diagnostic.IDE0031.severity = warning  # Use null propagation
